; ##########################################
; ############### bar/general ##############
; ##########################################

[bar/general]
monitor = ${env:MONITOR}
width = 100%
height = 30
offset-y = 5

bottom = false

;separator = |

background = ${colors.dark-background}
foreground = ${colors.light-foreground}

overline-size = 2
overline-color = #bc92f8
underline-size = 2
underline-color = #bc92f8

spacing = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 1

; ### FontName : Params ; Offset from top
font-0 = NotoSansMono:style=Bold:pixelsize=10;2
font-1 = NotoSansMono:style=Regular:size=8:antialias=false;2
font-2 = Font Awesome 5 Pro:style=Regular:pixelsize=10;2
font-3 = Font Awesome 5 Brands:style=Regular:pixelsize=10;2

modules-left = i3 xwindow
modules-center = spotify previous playpause next
modules-right = pulseaudio xkeyboard wlan battery date time powermenu

enable-ipc = true

cursor-click = pointer
cursor-scroll = ns-resize

; ##########################################
; ################## tray ##################
; ##########################################

; ### Position of the system tray window
; ### If empty or undefined, tray support will be disabled
; ### NOTE: A center aligned tray will cover center aligned modules
; ###
; ### Available positions:
; ###   left
; ###   center
; ###   right
; ###   none
tray-position = right

; ### If true, the bar will not shift its
; ### contents when the tray changes
tray-detached = false

; ### Tray icon max size
tray-maxsize = 16

; ### DEPRECATED! Since 3.3.0 the tray always uses pseudo-transparency
; ### Enable pseudo transparency
; ### Will automatically be enabled if a fully transparent
; ### background color is defined using `tray-background`
tray-transparent = false

; ### Background color for the tray container 
; ### ARGB color (e.g. #f00, #ff992a, #ddff1023)
; ### By default the tray container will use the bar
; ### background color.
tray-background = ${colors.tray-background}

; ### Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
tray-offset-x = 0
tray-offset-y = -5

; ### Pad the sides of each tray icon
tray-padding = ${offsets.mpadding}

; ### Scale factor for tray clients
tray-scale = 1.0

