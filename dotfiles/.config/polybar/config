; ##########################################
; ################ previous ################
; ##########################################

[module/previous]
type = custom/script
interval = 86400
format = "%{T3}<label>"
format-foreground = ${colors.light-foreground}
format-underline = ${colors.spotify}
format-padding = ${offsets.mpadding}

; ### Previous song icon
exec = echo -e ""

exec-if = "pgrep spotify"
;line-size = 1
click-left = playerctl -p spotify previous

; ##########################################
; ################## next ##################
; ##########################################

[module/next]
type = custom/script
interval = 86400
format = "%{T3}<label>"
format-foreground = ${colors.light-foreground}
format-underline = ${colors.spotify}
format-padding = ${offsets.mpadding}

; ### Next song icon
exec = echo -e ""

exec-if = "pgrep spotify"
;line-size = 1
click-left = playerctl -p spotify next

; ##########################################
; ############### playpause ################
; ##########################################

[module/playpause]
type = custom/ipc
format-foreground = ${colors.light-foreground}
format-underline = ${colors.spotify}
format-padding = ${offsets.mpadding}

; ### Default (no symbol)
hook-0 = echo ""
; ### Playing (play symbol)
hook-1 = echo -e ""
; ### Paused (pause symbol)
hook-2 = echo -e ""

initial = 1
;line-size = 1
click-left = playerctl -p spotify play-pause

; ##########################################
; ################# spotify ################
; ##########################################

[module/spotify]
type = custom/ipc
hook-0 = echo ""
hook-1 = python3 $HOME/.config/polybar/scripts/spotify/spotify_status.py
initial = 1

format-prefix-font = 3
format-prefix-foreground = ${colors.spotify}
format-prefix = "  "

format-padding = ${offsets.mpadding}
format-foreground = ${colors.light-foreground}
format-underline = ${colors.spotify}

line-size = 1
click-left = i3-msg '[class="Spotify"] focus'

